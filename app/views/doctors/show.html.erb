<%= stylesheet_link_tag "doctors" %>

<div class='users-show'>
  <%= image_tag @doctor.image.url(:thumb), :class => 'avatar' %>

  <h1 class='user-name-header'>Dr. <%= @doctor.name %></h1>
  <h3 class='doctor-specialization'><%= @doctor.specialization %></h3>

  <div class="search-bar">
    <input type="text" id="filterInput" placeholder="Search patients...">
  </div>

  <div class='patients-container'>
      <% @patients.each do |patient| %>
        <li class="patient">
          <p class="patient-img"><%= image_tag patient.image.url(:thumb), :class => 'avatar-1' %></p>
          <p class="patient-name"><%= link_to patient.name, patient_path(patient) %></p>
        </li>
      <% end %>
  </div>
</div>

<script type="text/javascript" src="assets/javascripts/patient.js">
</script>