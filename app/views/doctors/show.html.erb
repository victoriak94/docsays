
<%= image_tag @doctor.image.url(:thumb) %>

<h1><%= @doctor.name %></h1>

<%= link_to 'Edit My Account', edit_doctor_registration_path(@doctor) %>

<h4>Search a Patient's Name:</h4>
<%= simple_form_for Patient.new, :url => searchpatient_path, html: { class: 'patient-search' } do |f| %>
  <%= f.input :name , html: {class: 'search-name'} %>
  <%= f.button :submit,data: {disable_with: false} %>
<% end %>

<%= render partial: 'patientList'%>


<p><%= link_to 'Add New Patient', new_patient_registration_path %></p>
<p><%= link_to "Logout", destroy_doctor_session_path, method: :delete, data: {confirm: 'Are you sure you want to logout?'} %></p>
