<%= stylesheet_link_tag "diagnosis" %>
<div class='diagnosis-index-container'>
    <%= image_tag("medical-record.png", :alt => "medical record board", class: "img-medical-record") %>
    <h1 class='diagnoses-header'>Diagnoses</h1>

    <div class='diagnoses-list-container'>
    <% @diagnoses.each do |diagnosis| %>
        <ul class='diagnoses-list'>
            <li class='diagnosis'><%= link_to diagnosis.name, patient_diagnosis_path(id: diagnosis.id), class: 'diagnosis-name' %></p>
            <li class='arrow'><%= link_to image_tag("arrow-point-to-right.png", :alt => "arrow pointing to right", class: "img-arrow-right"), patient_diagnosis_path(id: diagnosis.id) %></p>
        </ul>
    <% end %>
    </div>

</div>
