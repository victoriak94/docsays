  <%= image_tag @patient.image.url(:thumb) %>
  <h1><%= @patient.name %></h1>

<% if current_patient %>
  <p><%= link_to 'Edit Account', edit_patient_registration_path(@patient) %></p>
  <p><%= link_to 'Diagnosis & Diet', patient_diagnoses_path(@patient) %></p>

  <h1>Search for new recipes</h1>
    <%= form_tag(recipe_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
    <%= submit_tag "Search" %>
    <% end %>

  <%= link_to "Logout", destroy_patient_session_path, method: :delete, data: {confirm: 'Are you sure you want to logout?'} %>
<% end %>

<% if current_doctor %>
<h2> Add a diagnosis to a patient:</h2>
<%= simple_form_for @patient do |f| %>
  <p> Patient Name:</p>
  <%= f.input :patient %>
  <p> Diagnosis:</p>
  <%= f.input :diagnosis %>
  <%= f.button :submit %>
<% end %>

  <p><%= link_to 'Diagnoses & Diet', patient_diagnoses_path(@patient) %> | <%= link_to 'Add Diagnosis & Diet', new_patient_diagnosis_path(@patient) %></p>
  <p><%= link_to 'Back', doctor_path(current_doctor) %></p>
  <p><%= link_to "Logout", destroy_doctor_session_path, method: :delete, data: {confirm: 'Are you sure you want to logout?'} %></p>
<% end %>
