<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
 <%= f.input :image, as: :file %>
    <%= f.input :name,
                required: true,
                input_html: { autocomplete: "full-name"}%>
    <%= f.input :age,
                required: true,
                input_html: { autocomplete: "age"}%>
    <%= f.input :sex,
                required: true,
                input_html: { autocomplete: "sex"}%>
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>


<% if current_patient %>
  <%= render “patients/shared/links” %>
  <%= link_to ‘Back’, patient_path(current_patient) %>
<% end %>

<% if current_doctor %>
  <%= link_to 'Back', doctor_path(current_doctor) %>
<% end %>
